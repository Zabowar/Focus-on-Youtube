{
    "manifest_version": 3,
    "author": "Pierre-Alexis Gatté",
    "name": "Focus on YouTube",
    "version": "1.1",
    "description": "Améliore ta productivité sur YouTube en limitant les shorts et en retirant les miniatures, les vidéos et les commentaires.",
    "icons": {
        "32": "icon/icon32.png",
        "64": "icon/icon64.png",
        "128": "icon/icon128.png"
    },
    "permissions": [
        "storage",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "*://www.youtube.com/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.youtube.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ]

}
